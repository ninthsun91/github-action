{
  "include": ["src"],
  "compilerOptions": {
      "outDir": "dist",
      "target": "ES6",
      "module": "CommonJS",
      "lib": ["ESNext"],

      "moduleResolution": "node",
      "esModuleInterop": true,
      "sourceMap": true,

      "strict": true,
      "noImplicitAny": true,
      "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
      "esm": true
  }
}